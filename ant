#!/usr/bin/env python3
"""ANT launcher script."""

import sys
import os
from pathlib import Path

# Get the absolute path to this script
script_path = Path(__file__).resolve()
ant_dir = script_path.parent
src_dir = ant_dir / "src"

# Add the src directory to Python path
sys.path.insert(0, str(src_dir))

# Import and run ANT
try:
    from ant.cli.main import main
    main()
except ImportError as e:
    print(f"❌ Error importing ANT: {e}")
    print(f"🔍 Looking for modules in: {src_dir}")
    print(f"📁 Directory exists: {src_dir.exists()}")
    if src_dir.exists():
        print(f"📂 Contents: {list(src_dir.iterdir())}")
    sys.exit(1)